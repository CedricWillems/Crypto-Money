            </div>
          </row>
        </row> 
      </div>
    </div>
  </div>
</row>

<script>
  
$(document).ready(function() {
  $('[data-toggle="tooltip"]').tooltip();   

  $("#Calculate_DCN_BTC").on("input", function() {

    var Calculated_DCN_BTC = Number($("#BTC_EUR").html())*($("#Calculate_DCN_BTC").val() * Number($("#DCN").html()));
    $("#Calculated_DCN_BTC").html(Calculated_DCN_BTC.toFixed(2));
  });

  $("#Calculate_DCN_LTC").on("input", function() {

    var Calculated_DCN_LTC = Number($("#LTC_EUR").html())*($("#Calculate_DCN_LTC").val() * Number($("#DCN").html()));
    $("#Calculated_DCN_LTC").html(Calculated_DCN_LTC.toFixed(2));
  });

  $("#Calculate_DCN_DOGE").on("input", function() {

    var Calculated_DCN_DOGE = Number($("#DOGE_EUR").html())*($("#Calculate_DCN_DOGE").val() * Number($("#DCN").html()));
    $("#Calculated_DCN_DOGE").html(Calculated_DCN_DOGE.toFixed(2));
  });


  $(".Dentacoin_BTC_Button_Calc").click(function(){
    $("#Dentacoin_BTC_Calc").toggleClass("hide");
    $(".Dentacoin_BTC_Button_Calc.main").toggleClass("hide");
  })

  $(".Dentacoin_LTC_Button_Calc").click(function(){
    $("#Dentacoin_LTC_Calc").toggleClass("hide");
    $(".Dentacoin_LTC_Button_Calc.main").toggleClass("hide");
  })

  $(".Dentacoin_DOGE_Button_Calc").click(function(){
    $("#Dentacoin_DOGE_Calc").toggleClass("hide");
    $(".Dentacoin_DOGE_Button_Calc.main").toggleClass("hide");
  })

  $("#DCN_BTC_details_button").click(function(){
    $(".DCN_BTC_details").toggleClass("hide-mobile");
    $("#DCN_BTC_details_button span").toggleClass('glyphicon-arrow-down').toggleClass('glyphicon-arrow-up');
  })
  $("#DCN_LTC_details_button").click(function(){
    $(".DCN_LTC_details").toggleClass("hide-mobile");
    $("#DCN_LTC_details_button span").toggleClass('glyphicon-arrow-down').toggleClass('glyphicon-arrow-up');
  })
  $("#DCN_DOGE_details_button").click(function(){
    $(".DCN_DOGE_details").toggleClass("hide-mobile");
    $("#DCN_DOGE_details_button span").toggleClass('glyphicon-arrow-down').toggleClass('glyphicon-arrow-up');
  })
});
</script>