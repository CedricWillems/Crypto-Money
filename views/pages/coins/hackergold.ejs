<div class="row">
  <div class="col-md-12">
    <div class="center">
      <h2 style="font-size: 2em">
        <a href="https://tokenmarket.net/blockchain/ethereum/assets/hacker-gold/" target="_blank">Hacker Gold</a>
      </h2>
    </div>
<!-- Begin Coin Market Cap panel -->     
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title" style="font-size: 2em">
          <a class="anchor" name="Hacker-Gold-CoinMarketCap-BTC"></a>
          <a href="https://coinmarketcap.com" target="_blank">Coin Market Cap</a>
        </h3>
      </div>    
      <div class="panel-body">
<!-- BTC -->
        <div class="row col-md-12 col-xs-12" style="font-size: 1.2em">
          <h3>
            <a href="https://coinmarketcap.com/currencies/hacker-gold/" target="_blank">HKG</a>
            <a id="CMC_HKG_BTC_details_button" class="btn show-mobile" data-toggle="tooltip" data-placement="right" title="Show details!">
              <span style="font-size: 1.4em" class="glyphicon glyphicon-arrow-down"></span>
            </a>
          </h3> 
          <div class="row">
            <div class="col-md-4 col-xs-12">
              <div style="padding-top: 10px; padding-bottom: 5px; font-weight: bold">
                Total Hacker Gold
              </div>
              <div>
                XVG <span id="HKG"><%=HKG%></span>
              </div>
            </div>
            <div class="CMC_HKG_BTC_details hide-mobile">
              <div class="col-md-4 col-xs-12">
                <div style="padding-top: 10px; padding-bottom: 5px; font-weight: bold">
                  Hacker Gold value in BTC
                </div>     
                <div>
                  BTC <%=CMC_HKG_BTC_LastPrice%>
                </div>     
              </div>
              <div class="col-md-4 col-xs-12">
                <div style="padding-top: 10px; padding-bottom: 5px; font-weight: bold">
                  BTC value in Euro
                </div>
                <div>
                  EUR <span id="BTC_EUR"><%=CC_BTC_EUR%></span>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-4 col-xs-12 CMC_HKG_BTC_details hide-mobile">
              <div style="padding-top: 10px; padding-bottom: 5px; font-weight: bold">
                Total Hacker Gold in BTC
              </div>        
              <div style="padding-bottom: 10px; color: green; font-size: 1.5em">
                BTC <%=(CMC_HKG_BTC_LastPrice*HKG).toFixed(3)%>
              </div>  
            </div>
            <div class="col-md-8 col-xs-12">
              <div style="padding-top: 10px; padding-bottom: 5px; font-weight: bold">
                Hacker Gold value in Euro
              </div>
               <div style="padding-bottom: 10px; color: green; font-size: 1.5em">
                EUR <%=(CC_BTC_EUR*(CMC_HKG_BTC_LastPrice*HKG)).toFixed(2)%>
              </div>
            </div>
          </div>
          <div class="col-xs-12"></div>
        </div>
      </div>   
<!-- END Coin Market Cap panel -->     
    </div>  
  </div>
</div>

<script>
$(document).ready(function() {
 // Coin Market Cap
// BTC
  $("#CMC_HKG_BTC_details_button").click(function(){
    $(".CMC_HKG_BTC_details").toggleClass("hide-mobile");
    $("#CMC_HKG_BTC_details_button span").toggleClass('glyphicon-arrow-down').toggleClass('glyphicon-arrow-up');
  })
});
</script>