<div class="row">
  <div class="col-md-12">
    <div class="center">
      <h2 style="font-size: 2em">
        <a href="https://tokenmarket.net/blockchain/ethereum/assets/hacker-gold/" target="_blank">Hacker Gold</a>
      </h2>
    </div>
<!-- Begin Coin Market Cap panel -->     
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title" style="font-size: 2em">
          <a class="anchor" name="Hacker-Gold-CoinMarketCap-BTC"></a>
          <a href="https://coinmarketcap.com" target="_blank">Coin Market Cap</a>
        </h3>
      </div>    
      <div class="panel-body">
<!-- BTC -->
        <div class="row col-md-12 col-xs-12" style="font-size: 1.2em">
          <h3>
            <a href="https://coinmarketcap.com/currencies/hacker-gold/" target="_blank">HKG</a>
            <a id="CMC_HKG_BTC_details_button" class="btn show-mobile" data-toggle="tooltip" data-placement="right" title="Show details!">
              <span style="font-size: 1.4em" class="glyphicon glyphicon-arrow-down"></span>
            </a>
          </h3> 
          <div class="row">
            <div class="col-md-4 col-xs-12">
              <div style="padding-top: 10px; padding-bottom: 5px; font-weight: bold">
                Total Hacker Gold
              </div>
              <div>
                XVG <span id="HKG"><%=HKG%></span>
              </div>
            </div>
            <div class="CMC_HKG_BTC_details hide-mobile">
              <div class="col-md-4 col-xs-12">
                <div style="padding-top: 10px; padding-bottom: 5px; font-weight: bold">
                  Hacker Gold value in BTC
                </div>     
                <div>
                  BTC <%=CMC_HKG_BTC_LastPrice%>
                </div>     
              </div>
              <div class="col-md-4 col-xs-12">
                <div style="padding-top: 10px; padding-bottom: 5px; font-weight: bold">
                  BTC value in Euro
                </div>
                <div>
                  EUR <span id="BTC_EUR"><%=CC_BTC_EUR%></span>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-4 col-xs-12 CMC_HKG_BTC_details hide-mobile">
              <div style="padding-top: 10px; padding-bottom: 5px; font-weight: bold">
                Total Hacker Gold in BTC
              </div>        
              <div style="padding-bottom: 10px; color: green; font-size: 1.5em">
                BTC <%=(CMC_HKG_BTC_LastPrice*HKG).toFixed(3)%>
              </div>  
            </div>
            <div class="col-md-8 col-xs-12">
              <div style="padding-top: 10px; padding-bottom: 5px; font-weight: bold">
                Hacker Gold value in Euro
              </div>
               <div style="padding-bottom: 10px; color: green; font-size: 1.5em">
                EUR <%=(CC_BTC_EUR*(CMC_HKG_BTC_LastPrice*HKG)).toFixed(2)%>
              </div>
            </div>
          </div>
          <div class="col-xs-12"></div>

          <div class="row">
            <div id="Hacker_Gold_CMC_BTC_Calc" class="hide">
              <div class="col-md-4 col-xs-12">
                <div style="padding-top: 10px; padding-bottom: 5px; font-weight: bold">
                  <button class="btn btn-primary Hacker_Gold_CMC_BTC_Button_Calc"><span class="glyphicon glyphicon-remove"></span></button>
                  Calculate Hacker Gold value
                </div>        
                <div class="form-group" style="padding-bottom: 10px; color: blue; font-size: 1.5em">
                  <input id="Calculate_CMC_HKG_BTC" class="form-control" type="Number" placeholder="Fill in Hacker Gold value in BTC" />
                </div>  
              </div>
              <div class="col-md-4 col-xs-12">
                <div style="padding-top: 10px; padding-bottom: 5px; font-weight: bold">
                  Calculated Hacker Gold in Euro
                </div>
                 <div style="padding-bottom: 10px; color: blue; font-size: 1.5em">
                  EUR <span id="Calculated_CMC_HKG_BTC"></span>
                </div>
              </div>
            </div>
            <div class="Hacker_Gold_CMC_BTC_Button_Calc main col-md-4 col-xs-6">
              <button class="btn btn-primary"><span class="glyphicon glyphicon-chevron-right"></span> Calculate</button>
            </div>
          </div>
        </div>
      </div>   
<!-- END Coin Market Cap panel -->     
    </div>  
  </div>
</div>

<script>
$(document).ready(function() { 
// Coin Market Cap
// BTC
  $("#CMC_HKG_BTC_details_button").click(function(){
    $(".CMC_HKG_BTC_details").toggleClass("hide-mobile");
    $("#CMC_HKG_BTC_details_button span").toggleClass('glyphicon-arrow-down').toggleClass('glyphicon-arrow-up');
  })

  $(".Hacker_Gold_CMC_BTC_Button_Calc").click(function(){
    $("#Hacker_Gold_CMC_BTC_Calc").toggleClass("hide");
    $(".Hacker_Gold_CMC_BTC_Button_Calc.main").toggleClass("hide");
  })

  $("#Calculate_CMC_HKG_BTC").on("input", function() {
    var Calculated_CMC_HKG_BTC = Number($("#BTC_EUR").html())*($("#Calculate_CMC_HKG_BTC").val() * Number($("#HKG").html()));
    $("#Calculated_CMC_HKG_BTC").html(Calculated_CMC_HKG_BTC.toFixed(2));
  });  
});
</script>